CC=gcc
FOR=g77

OBJECTS =dimdef.o \
	newmods.o \
	comtac.o \
	fgnmod.o \
	usernl.o \
	analyt.o \
	devt69.o \
	usrfun.o \
	hopcod.o \
	user10.o \
	ulm.o

INSFILE	= blkcom.ins \
	comta1.ins \
	comta2.ins \
	comta3.ins \
	dekspy.ins \
	tacsar.ins \
	space2.ins

CFLAGS = -DUNDERSCORE -O2
FFLAGS = -O2
IMAGE= C:\ATP\mytpbig\mytpbig.exe

LIBRARY = C:\ATP\atpmingw\make\tpbig.a C:\ATP\atpmingw\make\dismg7.a -lgdi32 C:\ATP\atpmingw\make\MinGW\lib\gcc\mingw32\5.1.0\libgcc.a

all:	$(IMAGE)

.f.o:
	$(FOR) -c $(FFLAGS) $<
.c.o:
	$(CC) -c $(CFLAGS) $<

$(IMAGE) : $(OBJECTS) $(INSFILE)
	$(FOR) -s -o $(IMAGE) $(OBJECTS) $(LIBRARY)
	
ulm.o: C:\ATP\atpmingw\make\sample\ulm.c
	$(CC) -c $(CFLAGS) C:\ATP\atpmingw\make\sample\ulm.c
